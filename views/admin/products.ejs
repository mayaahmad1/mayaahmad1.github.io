<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">

  </div>
</head>

<body>
  <%- include('../partials/admin-header') %>
  <div class="container">
    <main>
      <section class="signin">
        <a href="/admin_panel/products/add">Add New Product</a>
        <br>
        <br>
        <h4 style="color: rgb(116, 116, 116); font-weight: 600;">All Products</h4>
        <ol>
          
          <% products.forEach(item => { %>
            <li>
              <div style="color: rgb(116, 116, 116); font-size: 20; font-weight: 600;">
                Name: <%- item.name %>
              </div>
              <div style="color: rgb(116, 116, 116);">
                Description: <%- item.description %>
              </div>
              <div style="color: rgb(116, 116, 116);">
                Price: <%- item.price %>
              </div>
              <div>
                <a href="/admin_panel/products/delete/<%- item.id %>">Delete</a>
              </div>
            </li>
          <% }) %>
        </ol>
      </section>
    </main>
  </div>
  <%- include('../partials/footer') %>
</body>

</html>