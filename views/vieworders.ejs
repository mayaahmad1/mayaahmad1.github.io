<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="css/style.css">
    <title>View Orders - ScholarKits</title>
</head>

<body>
    <%- include('./partials/header') %>
    <main>
        <div class="container mt-5">
            <h2 class="mb-4">All Orders</h2>
            <% orders.forEach(item => { %>
                <div style="background-color: rgb(255, 255, 255); padding: 10px; border-radius: 10px; margin-bottom: 10px;">
                    <p>Order ID: <%- item._id %></p>
                    <p>
                        Items: <% item.items.forEach(it => { %>
                            <%- it.name %>
                            <% }) %>
                    </p>
                    <p>
                        Total Item: <%- item.total_item %>
                    </p>
                    <p>
                        Total Price: <%- item.total_price %>
                    </p>
                    <p>Order Status: Processing</p>
                </div>
            <% }) %>
        </div>
    </main>

    <%- include('./partials/footer') %>
</body>

</html>
