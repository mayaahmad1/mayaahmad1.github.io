<!DOCTYPE html>
<html>

<head>
    <title>Scholarkits</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="css/style.css">
   
</head>

<body>

    <%- include('./partials/header') %>

    <main>
        <section class="hero">
            <div class="hero-text">
                <h2>Get everything you need, in one ScholarKit!</h2>
                <p>Your One-Stop Shop for University Supplies!</p>
                <a href="#scroll-to-element" class="button">Shop Kits</a>
            </div>
            <!--carousel-->
            <div id="demo" class="hero-image" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/P1.png" alt="picture1" class="d-block w-100 " height="550">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/P2.png" alt="picture2" class="d-block w-100" height="550">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/P3.png" alt="picture3" class="d-block w-100 " height="550">
                    </div>
                </div>
            </div>
        </section>
        <!--check out our kits -->
        <section class="kits">
            <h2 id="scroll-to-element" style="text-align: center;">CHECK OUT OUR KITS</h2> <br>
            <div class="kit-group">
                <h3>Budget Kits</h3>
                <div class="kit-container">
                    <% products.forEach(item => { %>
                        <div class="kit">
                            <img src="images/pack1.jpg" alt="Budget Kit 1">
                            <h4><%- item.name %></h4>
                            <p><%- item.description %></p>
                            <span class="price"><%- item.price %> Sar</span>
                            <a href="/products/add-to-cart/<%- item._id %>" class="button">Add to Cart</a>
                        </div>
                    <% }) %>
                </div>
            </div>
            <div class="kit-group">
                <h3>Customizable Kits</h3> <br>
                    <h4><a href="custom.html">BUILD YOUR OWN KIT NOW</a></h4>
                </div>
                
            </div>
        </section>
        
        <section class="hero" >
            <!--we save the hassle-->
            <div class="container">
                <h2 style="text-align: center;">ScholarKit saves you the</h2>
                <div class="circle"> <img src="images/time.png"  alt="logo"
                        style="width:140px; height:130px;"> <br><br>
                    <h4> Time </h4>
                </div> 
                <div class="circle"><img src="images/energy.png"  alt="logo"
                        style="width:140px; height:130px;"><br><br>
                    <h4>Energy </h4>
                </div>
                <div class="circle"><img src="images/money.png"  alt="logo"
                        style="width:140px; height:130px;"><br><br>
                    <h4>Money </h4>
                </div>
            
            </div> 
        </section> 
    </main>
  <%- include('./partials/footer') %>
</body>
</html>